<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".fragment.PostFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="আপনার বিজ্ঞাপন বাছাই করুণ"
            android:textSize="30sp"
            android:textColor="@color/red"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/post_product_sell_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="পণ্য বিক্রি করতে চাই"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@color/red"/>
        <Button
            android:id="@+id/post_rent_house_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="বাসা ভাড়া দিতে চাই"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@color/orange"/>
        <Button
            android:id="@+id/post_teacher_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="পড়াতে চাই"
            android:textSize="20sp"
            android:background="@color/blue"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/post_student_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="পড়তে চাই"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/orange"/>
    </LinearLayout>

</FrameLayout>